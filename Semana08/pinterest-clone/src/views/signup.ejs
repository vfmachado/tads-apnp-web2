<%- include('./components/head.ejs') %>

</head>

<body>
    
    <%- include('./components/menu.ejs') %>

    <main class="form-signin d-flex justify-content-center ">
        <form action="/signup" method="POST"
            style="width:600px">

            <h1 class="h3 mb-3 fw-normal mt-5">Please, sign up</h1>

           
            <label for="inputEmail" class="mt-2">Email</label>
            <input type="text" id="inputEmail" class="form-control" name="email" autofocus>
            <% if (locals.errors && locals.errors.email) { %>
                <p><%= locals.errors.email %></p>
            <% } %>
          
            <label for="inputName" class="mt-2">Name</label>
            <input type="text" id="inputName" class="form-control" name="name" required autofocus>
            <% if (locals.errors && locals.errors.name) { %>
                <p><%= locals.errors.name %></p>
            <% } %>
            
            <label for="inputPassword" class="mt-2">Password</label>
            <input type="password" id="inputPassword" class="form-control" name="password"  required>
            <% if (locals.errors && locals.errors.password) { %>
                <p><%= locals.errors.password %></p>
            <% } %>
            

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>

        </form>
    </main>
</body>

</html>